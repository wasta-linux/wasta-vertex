#!/bin/sh
# postinst script for wasta-vertex
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        # rik: need to remove nemo.png as it is a folder icon but this overrides
        #      the "eject icon" for mounted drives.  Removing nemo.png allows
        #      the default eject icon to be used from ubuntu-mono-dark
        rm -rf /usr/share/icons/Moka/*/apps/nemo.png
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
